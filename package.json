{
  "name": "synth-components",
  "version": "0.0.0",
  "description": "Build a synthesizer with Web Components",
  "main": "index.js",
  "module": "index.js",
  "type": "module",
  "scripts": {
    "dev": "run-p build:watch serve",
    "prebuild": "run-s clean lint",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf *.{d.ts,d.ts.map,js,js.map}",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "analyze": "wca analyze \"src/**/*.ts\" --outFile custom-elements.json",
    "serve": "es-dev-server --node-resolve --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript"
  ],
  "author": "Jurgen BeliÃ«n<info@jurgenbelien.nl>",
  "license": "ISC",
  "dependencies": {
    "husky": "^4.3.5",
    "lit-element": "^2.3.1",
    "save-dev": "0.0.1-security"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "es-dev-server": "^2.0.2",
    "eslint": "^6.8.0",
    "lit-analyzer": "^1.1.10",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3",
    "web-component-analyzer": "^1.0.3"
  }
}
